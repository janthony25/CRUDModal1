@model List<CRUDModal1.Models.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<div class="container">
    <button class="btn btn-primary" id="addBtn">Add Customer</button>
</div>

<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Customer Name</th>
                <th>Email Address</th>
                <th>Contact #</th>
                <th>Date Added</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="tblBody">

        </tbody>
    </table>
</div>

<div class="modal" id="ProductModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="modalTitle"></h3>
            </div>
            <div class="modal-body">
                <input type="hidden" id="CustomerId" asp-for="@Model[0].CustomerId" value="0" />
                <div class="mb-2">
                    <label asp-for="@Model[0].CustomerName"></label>
                    <input id="CustomerName" asp-for="@Model[0].CustomerName" class="form-control" />
                </div>
                <div class="mb-2">
                    <label asp-for="@Model[0].CustomerEmail"></label>
                    <input id="CustomerEmail" asp-for="@Model[0].CustomerEmail" class="form-control" />
                </div>
                <div class="mb-2">
                    <label asp-for="@Model[0].CustomerNumber"></label>
                    <input id="CustomerNumber" asp-for="@Model[0].CustomerNumber" class="form-control" />
                </div>
               @*  <div class="mb-2">
                    <label asp-for="@Model[0].DateAdded"></label>
                    <input id="DateAdded" asp-for="@Model[0].DateAdded" class="form-control" />
                </div> *@
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" id="Save" type="submit" onclick="Insert();">Save</button>
                <button class="btn btn-warning" id="Update" type="submit" onclick="Update();" style="display: none;">Update</button>
                <button class="btn btn-danger" data-bs-dismiss="modal" onclick="HideModal();">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/customer.js"></script>